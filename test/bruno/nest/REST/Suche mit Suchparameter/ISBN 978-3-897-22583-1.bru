meta {
  name: ISBN 978-3-897-22583-1
  type: http
  seq: 7
}

get {
  url: {{restUrl}}?isbn=978-3-897-22583-1
  body: none
  auth: inherit
}

params:query {
  isbn: 978-3-897-22583-1
}

headers {
  Accept: application/json
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/json(; charset=utf-8)?$
  res.body.content: isArray
  res.body.content: length 1
  res.body.content[0].isbn: eq 978-3-897-22583-1
  res.body.content[0].id: gte 0
}

settings {
  encodeUrl: true
  timeout: 0
}
