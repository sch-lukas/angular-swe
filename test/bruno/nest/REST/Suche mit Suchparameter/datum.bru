meta {
  name: datum
  type: http
  seq: 21
}

get {
  url: {{restUrl}}?datum=2025-02-08
  body: none
  auth: inherit
}

params:query {
  datum: 2025-02-08
}

headers {
  Accept: application/json
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/json(; charset=utf-8)?$
  res.body.content: isArray
  res.body.content: isNotEmpty
}

tests {
  test('Body: preis und ID', () => {
    res.getBody()
      .content
      .forEach(buch => {
        const { preis, id } = buch;
        expect(Number(preis)).to.be.lte(99.9);
        expect(id).to.be.above(0);
      });
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
