meta {
  name: Schlagwort JAVASCRIPT
  type: http
  seq: 9
}

get {
  url: {{restUrl}}?javascript=true
  body: none
  auth: inherit
}

params:query {
  javascript: true
}

headers {
  Accept: application/json
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/json(; charset=utf-8)?$
  res.body.content: isArray
  res.body.content: isNotEmpty
}

tests {
  test('Body: Schlagwort JAVASCRIPT und ID', () => {
    res.getBody()
      .content
      .forEach(buch => {
          const { schlagwoerter, id } = buch;
          expect(schlagwoerter).to.be.an('array').that.includes('JAVASCRIPT');
          expect(id).to.be.above(0);
      });
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
