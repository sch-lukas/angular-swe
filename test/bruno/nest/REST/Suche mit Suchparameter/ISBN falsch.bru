meta {
  name: ISBN falsch
  type: http
  seq: 8
}

get {
  url: {{restUrl}}?isbn=x
  body: none
  auth: inherit
}

params:query {
  isbn: x
}

headers {
  Accept: application/json
}

assert {
  res.status: eq 404
  res.headers['content-type']: matches ^application\/json(; charset=utf-8)?$
  res.body.statusCode: eq 404
  res.body.error: eq Not Found
  res.body.message: contains isbn
}

settings {
  encodeUrl: true
  timeout: 0
}
