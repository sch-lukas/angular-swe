meta {
  name: Schlagwort TYPESCRIPT
  type: http
  seq: 10
}

get {
  url: {{restUrl}}?typescript=true
  body: none
  auth: inherit
}

params:query {
  typescript: true
}

headers {
  Accept: application/json
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/json(; charset=utf-8)?$
  res.body.content: isArray
  res.body.content: isNotEmpty
}

tests {
  test('Body: Schlagwort TYPESCRIPT und ID', () => {
    res.getBody()
      .content
      .forEach(buch => {
        const { schlagwoerter, id } = buch;
        expect(schlagwoerter).to.be.an('array').that.includes('TYPESCRIPT');
        expect(id).to.be.above(0);
      });
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
