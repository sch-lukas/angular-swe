meta {
  name: Teilstring "n" des Titels
  type: http
  seq: 4
}

get {
  url: {{restUrl}}?titel=n
  body: none
  auth: inherit
}

params:query {
  titel: n
}

headers {
  Accept: application/json
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/json(; charset=utf-8)?$
  res.body.content: isArray
  res.body.content: isNotEmpty
}

tests {
  test('Body: Titel enthaelt "n" und ID', () => {
    res.getBody()
      .content
      .forEach(buch => {
        const { titel, id } = buch;
        expect(titel.titel).to.be.a('string').that.includes('n');
        expect(id).to.be.above(0);
      });
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
