meta {
  name: Nicht-vorhandener Teilstring des Titels
  type: http
  seq: 6
}

get {
  url: {{restUrl}}?titel=xxx
  body: none
  auth: inherit
}

params:query {
  titel: xxx
}

headers {
  Accept: application/json
}

assert {
  res.status: eq 404
  res.headers['content-type']: matches ^application\/json(; charset=utf-8)?$
  res.body.statusCode: eq 404
  res.body.error: eq Not Found
  res.body.message: contains titel
}

settings {
  encodeUrl: true
  timeout: 0
}
