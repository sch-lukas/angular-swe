meta {
  name: New Access Token "admin"
  type: http
  seq: 2
}

post {
  url: {{oidcTokenUrl}}
  body: formUrlEncoded
  auth: none
}

body:form-urlencoded {
  grant_type: password
  username: {{username}}
  password: {{password}}
  client_id: {{clientId}}
  client_secret: {{clientSecret}}
}

assert {
  res.status: eq 200
  res.headers['content-type']: eq application/json
  res.body.access_token: matches .+\..+\..+
  res.body.expires_in: eq 1800
  res.body.refresh_token: matches .+\..+\..+
  res.body.refresh_expires_in: eq 3600
}

settings {
  encodeUrl: true
  timeout: 0
}
