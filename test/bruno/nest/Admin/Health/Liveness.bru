meta {
  name: Liveness
  type: http
  seq: 1
}

get {
  url: {{healthUrl}}/liveness
  body: none
  auth: inherit
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/json(; charset=utf-8)?$
  res.body.status: eq ok
  res.body.info.appserver.status: eq up
  res.body.error: isJson
  res.body.error: isEmpty
}

settings {
  encodeUrl: true
  timeout: 0
}
