meta {
  name: Suche von Buechern mit rating >= 3
  type: graphql
  seq: 7
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: inherit
}

headers {
  Accept: application/graphql-response+json
}

body:graphql {
  query ($rating: Int = 3) {
    buecher(suchparameter: {rating: $rating}) {
      rating
      titel {
          titel
      }
    }
  }
}

body:graphql:vars {
  {
    "rating": 3
  }
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.data.buecher: isArray
  res.body.data.buecher: isNotEmpty
}

tests {
  test('Body mit rating und titel', () => {
    res.getBody()
      .data
      .buecher
      .forEach(buch => {
        const { rating, titel } = buch;
        expect(rating).to.be.a('number').that.is.gte(3);
        expect(titel.titel).to.be.a('string')
      });
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
