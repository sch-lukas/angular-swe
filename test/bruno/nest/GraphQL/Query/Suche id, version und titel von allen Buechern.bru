meta {
  name: Suche id, version und titel von allen Buechern
  type: graphql
  seq: 3
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: inherit
}

headers {
  Accept: application/graphql-response+json
}

body:graphql {
  {
    buecher {
      id
      version
      art
      titel {
        titel
      }
    }
  }
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.data.buecher: isArray
  res.body.data.buecher: isNotEmpty
}

tests {
  test('Body mit den Properties', () => {
    res.getBody()
      .data
      .buecher
      .forEach(buch => {
        const { id, version, art, titel } = buch;
        expect(id).to.be.a('string');
        expect(parseInt(id)).to.be.gte(0);
        expect(version).to.be.a('number').that.is.gte(0);
        expect(art).to.be.a('string');
        expect(titel.titel).to.be.a('string');
      });
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
