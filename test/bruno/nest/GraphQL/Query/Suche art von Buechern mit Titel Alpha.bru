meta {
  name: Suche art von Buechern mit Titel Alpha
  type: graphql
  seq: 4
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: inherit
}

headers {
  Accept: application/graphql-response+json
}

body:graphql {
  query ($titel: String = "Alice") {
    buecher(suchparameter: {titel: $titel}) {
      art
    }
  }
}

body:graphql:vars {
  {
    "titel": "Alice"
  }
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.data.buecher: isArray
  res.body.data.buecher: isNotEmpty
}

tests {
  test('Body mit art', () => {
    res.getBody()
      .data
      .buecher
      .map(buch => buch.art)
      .forEach(art => expect(art).to.be.a('string'));
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
