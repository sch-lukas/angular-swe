meta {
  name: Suche art, schlagwoerter, titel von Buechern mit Teilstring "an" im Titel
  type: graphql
  seq: 5
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: inherit
}

headers {
  Accept: application/graphql-response+json
}

body:graphql {
  query ($titel: String = "a") {
    buecher(suchparameter: {titel: $titel}) {
      art
      schlagwoerter
      titel {
        titel
      }
    }
  }
}

body:graphql:vars {
  {
    "titel": "an"
  }
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.data.buecher: isArray
  res.body.data.buecher: isNotEmpty
}

tests {
  test('Body mit art, schlagwoerter, titel', () => {
    res.getBody()
      .data
      .buecher
      .forEach(buch => {
        const { art, schlagwoerter, titel } = buch;
        expect(art).to.be.a('string');
        expect(schlagwoerter).to.be.an('array');
        expect(titel.titel).to.be.a('string').that.includes('an');
      });
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
