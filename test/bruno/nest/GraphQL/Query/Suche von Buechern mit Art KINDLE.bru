meta {
  name: Suche von Buechern mit Art KINDLE
  type: graphql
  seq: 9
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: inherit
}

headers {
  Accept: application/graphql-response+json
}

body:graphql {
  query ($art: Art = EPUB) {
    buecher(suchparameter: {art: $art}) {
      art
      titel {
        titel
      }
    }
  }
}

body:graphql:vars {
  {
    "art": "EPUB"
  }
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.data.buecher: isArray
  res.body.data.buecher: isNotEmpty
}

tests {
  test('Body mit art und titel', () => {
    res.getBody()
      .data
      .buecher
      .forEach(buch => {
        const { art, titel } = buch;
        expect(art).to.be.a('string').that.is.eq('EPUB');
        expect(titel.titel).to.be.a('string').that.is.not.empty;
      });
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
