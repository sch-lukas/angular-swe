meta {
  name: Query falsche Operation
  type: graphql
  seq: 13
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: inherit
}

headers {
  Accept: application/graphql-response+json
}

body:graphql {
  query ($id: ID! = "1") {
    bbbuch(id: $id) {
      isbn
   }
  }
}

body:graphql:vars {
  {
    "id": "1"
  }
}

assert {
  res.status: eq 400
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.errors: isArray
  res.body.errors: length 1
  res.body.errors[0].extensions.code: eq GRAPHQL_VALIDATION_FAILED
}

settings {
  encodeUrl: true
  timeout: 0
}
