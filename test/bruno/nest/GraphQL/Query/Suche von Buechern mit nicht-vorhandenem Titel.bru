meta {
  name: Suche von Buechern mit nicht-vorhandenem Titel
  type: graphql
  seq: 6
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: inherit
}

headers {
  Accept: application/graphql-response+json
}

body:graphql {
  query ($titel: String = "Nichtvorhanden") {
    buecher(suchparameter: {titel: $titel}) {
      art
    }
  }
}

body:graphql:vars {
  {
    "titel": "Nichtvorhanden"
  }
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.errors: isArray
  res.body.errors: length 1
  res.body.errors[0].message: contains titel
  res.body.errors[0].path: isArray
  res.body.errors[0].path: length 1
  res.body.errors[0].path[0]: eq buecher
  res.body.errors[0].extensions.code: eq BAD_USER_INPUT
}

settings {
  encodeUrl: true
  timeout: 0
}
