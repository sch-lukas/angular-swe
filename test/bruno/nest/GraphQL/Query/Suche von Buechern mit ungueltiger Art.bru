meta {
  name: Suche von Buechern mit ungueltiger Art
  type: graphql
  seq: 10
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: inherit
}

headers {
  Accept: application/graphql-response+json
}

body:graphql {
  query ($art: String = "UNGUELTIG") {
    buecher(suchparameter: {art: $art}) {
      art
    }
  }
}

body:graphql:vars {
  {
    "art": "UNGUELTIG"
  }
}

assert {
  res.status: eq 400
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.errors: isArray
  res.body.errors: length 1
  res.body.errors[0].message: contains Art
  res.body.errors[0].extensions.code: eq GRAPHQL_VALIDATION_FAILED
}

settings {
  encodeUrl: true
  timeout: 0
}
