meta {
  name: Suche von Buechern mit lieferbar=true
  type: graphql
  seq: 11
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: inherit
}

headers {
  Accept: application/graphql-response+json
}

body:graphql {
  query ($lieferbar: Boolean = true) {
    buecher(suchparameter: {lieferbar: $lieferbar}) {
      lieferbar
      titel {
        titel
      }
    }
  }
}

body:graphql:vars {
  {
    "lieferbar": true
  }
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.data.buecher: isArray
  res.body.data.buecher: isNotEmpty
}

tests {
  test('Body mit lieferbar und titel', () => {
    res.getBody()
      .data
      .buecher
      .forEach(buch => {
        const { lieferbar, titel } = buch;
        expect(lieferbar).to.be.true;
        expect(titel.titel).to.be.a('string').that.is.not.empty;
      });
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
