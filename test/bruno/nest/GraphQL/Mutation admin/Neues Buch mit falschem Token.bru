meta {
  name: Neues Buch mit falschem Token
  type: graphql
  seq: 4
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: bearer
}

headers {
  Accept: application/graphql-response+json
}

auth:bearer {
  token: {{TOKEN}}x
}

body:graphql {
  mutation {
    create(
      input: {
        isbn: "978-1-491-95035-7",
        rating: 1,
        art: HARDCOVER,
        preis: 99.99,
        rabatt: 0.123,
        lieferbar: true,
        datum: "2025-01-31T00:00:00Z",
        homepage: "https://create.mutation",
        schlagwoerter: ["JAVASCRIPT", "TYPESCRIPT"],
        titel: {
          titel: "Titelcreatemutation",
          untertitel: "untertitelcreatemutation"
        },
        abbildungen: [{
          beschriftung: "Abb. 1",
          contentType: "img/png"
        }]
      }
    ) {
        id
    }
  }
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.errors: isArray
  res.body.errors: length 1
  res.body.errors[0].message: contains Unauthorized
  res.body.errors[0].path: isArray
  res.body.errors[0].path: length 1
  res.body.errors[0].path[0]: eq create
  res.body.errors[0].extensions.code: eq BAD_USER_INPUT
}

settings {
  encodeUrl: true
  timeout: 0
}
