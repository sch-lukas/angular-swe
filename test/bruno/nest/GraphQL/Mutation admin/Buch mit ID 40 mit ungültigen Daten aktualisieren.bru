meta {
  name: Buch mit ID 40 mit ung√ºltigen Daten aktualisieren
  type: graphql
  seq: 6
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: inherit
}

headers {
  Accept: application/graphql-response+json
}

body:graphql {
  mutation {
    update(
      input: {
        id: 40,
        version: 0,
        isbn: "falsche-ISBN",
        rating: -1,
        art: HARDCOVER,
        preis: 1,
        rabatt: 0,
        lieferbar: false,
        datum: "12345-123-123",
        homepage: "anyHomepage"
      }
    ) {
        version
    }
  }
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.errors: isArray
  res.body.errors: length 1
  res.body.errors[0].message: contains isbn
  res.body.errors[0].message: contains datum
  res.body.errors[0].message: contains homepage
  res.body.errors[0].path: isArray
  res.body.errors[0].path: length 1
  res.body.errors[0].path[0]: eq update
  res.body.errors[0].extensions.code: eq BAD_USER_INPUT
}

settings {
  encodeUrl: true
  timeout: 0
}
