meta {
  name: Neues Buch mit ung√ºltigen Daten
  type: graphql
  seq: 3
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: inherit
}

headers {
  Accept: application/graphql-response+json
}

body:graphql {
  mutation {
    create(
      input: {
        isbn: "falsche-isbn",
        rating: 999,
        art: HARDCOVER,
        preis: 1,
        rabatt: 0,
        lieferbar: true,
        datum: "12345-123-123",
        homepage: "anyHomepage",
        schlagwoerter: ["JAVASCRIPT"],
        titel: {
          titel: "?!"
          untertitel: "mutationinvalid"
        }
      }
    ) {
        id
    }
  }
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.errors: isArray
  res.body.errors: length 1
  res.body.errors[0].message: contains titel
  res.body.errors[0].message: contains isbn
  res.body.errors[0].message: contains datum
  res.body.errors[0].message: contains homepage
  res.body.errors[0].path: isArray
  res.body.errors[0].path: length 1
  res.body.errors[0].path[0]: eq create
  res.body.errors[0].extensions.code: eq BAD_USER_INPUT
  res.body.data.create: isNull
}

settings {
  encodeUrl: true
  timeout: 0
}
