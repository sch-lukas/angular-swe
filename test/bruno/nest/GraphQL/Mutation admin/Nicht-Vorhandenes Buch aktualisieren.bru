meta {
  name: Nicht-Vorhandenes Buch aktualisieren
  type: graphql
  seq: 7
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: inherit
}

headers {
  Accept: application/graphql-response+json
}

body:graphql {
  mutation {
    update(
      input: {
        id: "999999",
        version: 0,
        isbn: "978-0-007-09732-6",
        rating: 5,
        art: HARDCOVER,
        preis: 99.99,
        rabatt: 0.099,
        lieferbar: false,
        datum: "2025-02-01T00:00:00Z",
        schlagwoerter: ["JAVASCRIPT", "TYPESCRIPT"],
        homepage: "https://nicht.vorhanden.de/"
      }
    ) {
        version
    }
  }
}

assert {
  res.status: eq 200
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.errors: isArray
  res.body.errors: length 1
  res.body.errors[0].message: contains 999999
  res.body.errors[0].path: isArray
  res.body.errors[0].path: length 1
  res.body.errors[0].path[0]: eq update
  res.body.errors[0].extensions.code: eq BAD_USER_INPUT
}

settings {
  encodeUrl: true
  timeout: 0
}
