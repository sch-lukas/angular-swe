meta {
  name: Neues Buch falsche Datentypen
  type: graphql
  seq: 2
}

post {
  url: {{graphqlUrl}}
  body: graphql
  auth: bearer
}

headers {
  Accept: application/graphql-response+json
}

auth:bearer {
  token: {{TOKEN}}
}

body:graphql {
  mutation {
    create(
      input: {
        isbn: "978-1-491-95035-7",
        rating: "1",
        art: "HARDCOVER",
        preis: "99.99",
        rabatt: "0.123",
        lieferbar: 1,
        datum: 1,
        homepage: "https://create.falsch",
        schlagwoerter: [0, true],
        titel: {
          titel: "falsch",
          untertitel: false
        },
        abbildungen: false
      }
    ) {
        id
    }
  }
}

assert {
  res.status: eq 400
  res.headers['content-type']: matches ^application\/graphql-response\+json(; charset=utf-8)?$
  res.body.errors: isArray
  res.body.errors.length: gte 1
}

tests {
  test('Body mit errors', () => {
    res.getBody()
      .errors
      .map(error => error.extensions.code)
      .forEach(code => expect(code).to.be.a('string').that.is.eql('GRAPHQL_VALIDATION_FAILED'));
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
